@model List<Squib.Data.Model.PromoImages>

@if (Model != null)
{
    if (Model.Count > 0)
    {
        <div class="row">
            <div class="col-lg-12">
                <label>Images</label>
            </div>
        </div>
        <div class="row">
            @foreach (var img in Model) { 
                <div class="col-lg-3">
                    <img src="@Url.Action("DownloadFileByPath", "File", new { path = img.Path, filename = img.Filename, isEmbed = false})" class="img-responsive" />
                </div>
            }
        </div>
        <div class="row">
            <div class="col-lg-12">
                &nbsp;
            </div>
        </div>
    }
}